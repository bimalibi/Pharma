@using Pharma.Entities;
@model Product

<h4>Edit</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditConfirm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Product Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockThreshold" class="control-label">Stock Threshold Quantityy</label>
                <input asp-for="StockThreshold" class="form-control" />
                <span asp-validation-for="StockThreshold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManufacturerId" class="control-label"></label>
                <input asp-for="ManufacturerId" class="form-control" />
                <span asp-validation-for="ManufacturerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Update" class="btn btn-success" />
                <a asp-action="Index" type="button" class="btn btn-danger">Cancel</a>            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

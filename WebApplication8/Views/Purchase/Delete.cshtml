@using Pharma.Entities;
@model Purchase

<h4>Are you sure you want to delete this?</h4>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Cost Price
                </th>
                <th>
                    Total
                </th>
                <th>
                    Supplier
                </th>
                <th>
                    Manufacturer
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @*@Html.DisplayFor(modelItem=>item.id+" "+item.id)*@
                    @Model.ProductId
                </td>
                <td>
                    @Model.Quantity
                </td>
                <td>
                    @Model.CostPrice
                </td>
                <td>
                    @(Model.Quantity*@Model.CostPrice)
                </td>
                <td>
                    @Model.SupplierId
                </td>
                <td>
                    @Model.ManufacturerId
                </td>
            </tr>

        </tbody>
    </table>
    <form asp-action="DeleteConfirm">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" type="button" class="btn btn-primary">Cancel</a>
    </form>
</div>